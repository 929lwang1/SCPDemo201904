procedure TfResGroup.qryRES_GRP_MSTRAfterScroll(DataSet: TDataSet);
begin
  if qryRES_GRP.Active then qryRES_GRP.Close;
  qryRES_GRP.Parameters[0].Value := qryRES_GRP_MSTR.FieldByName('RESOURCE_GROUP_ID').Value;
  qryRES_GRP.Open;
end;

